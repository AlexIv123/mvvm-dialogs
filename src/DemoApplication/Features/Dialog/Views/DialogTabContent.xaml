<UserControl
    x:Class="DemoApplication.Features.Dialog.Views.DialogTabContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
    xmlns:vm="clr-namespace:DemoApplication.Features.Dialog.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:DialogTabContentViewModel}"
    md:DialogServiceBehaviors.IsRegisteredView="True">

    <UniformGrid Rows="2">
        <Button Command="{Binding ShowImplicitDialogCommand}">
            <TextBlock Text="Show dialog using the dialog type locator" />
        </Button>
        <Button Command="{Binding ShowExplicitDialogCommand}">
            <TextBlock Text="Show dialog by specifying dialog type" />
        </Button>
    </UniformGrid>
</UserControl>